# ── AI Services ──
GEMINI_API_KEY=your-google-gemini-api-key
GEMINI_MODEL_FLASH=gemini-2.5-flash
GEMINI_MODEL_PRO=gemini-2.5-pro
GROQ_API_KEY=your-groq-api-key
YOUTUBE_DATA_API_KEY=
