TZ=Africa/Algiers

# ── RSS Sources Config ──
MAX_RSS_SOURCES=300
RSS_FETCH_TIMEOUT=30

# ── Content Settings ──
DEDUP_SIMILARITY_THRESHOLD=0.70
BREAKING_NEWS_URGENCY_THRESHOLD=8
